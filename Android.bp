package {
    default_applicable_licenses: ["vendor_amlogic_ota_license"],
}

license {
    name: "vendor_amlogic_ota_license",
    visibility: [":__subpackages__"],
    license_kinds: [
        "SPDX-license-identifier-Apache-2.0",
    ],
}
android_app {
    name: "OTAUpgrade",

    static_libs: ["libotaupdate","androidx.appcompat_appcompat"],
    srcs: ["src/**/*.java"],
    certificate: "platform",
    optimize: {
        enabled: false,
    },
    dex_preopt: {
        enabled: false,
    },
    sdk_version: "system_current",
    product_specific: true,

    libs: [
        "droidlogic",
        "org.apache.http.legacy",
    ],
    uses_libs: ["droidlogic.software.core","org.apache.http.legacy"],
}

java_import {
    name: "libotaupdate",
    jars: ["libs/libotaupdate.jar"],
}
